@model List<Blog.Models.Post>
@using Blog.Models

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (Model.Count == 0)
{
    <h3>Non ci sono posts al momento</h3>
}
else
{
<div class="row g-3 row-cols-1 row-cols-md-2 row-cols-lg-3">
    @foreach (var post in Model)
    {
        <div class="col">
            <div class="card h-100">
                @*<img src="..." class="card-img-top" alt="@post.Title">*@
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@post.Title</h5>
                    <p class="card-text mb-auto">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    @Html.ActionLink("Leggi", "Show", new {id = post.PostId}, new { @class = "btn btn-primary w-100" })
                </div>
            </div>
        </div>
    }
</div>
}
